<div class="p-3 col-md-8 m-auto pt-4 mt-5 mb-5">
    <form class="m-auto" autocomplete="on">
        <h5 class="text-center">Edit a Playlist</h5>
        <br>
        <div class="form-outline">
            <input value="<%=playlist.title%>" name="title" type="text" id="title" class="form-control" required
                autofocus />
            <label class="form-label" for="title">Playlist title or name</label>
        </div>
        <br>
        <div class="form-outline">
            <textarea required name="description" class="form-control" id="description"
                rows="4"><%=playlist.description%></textarea>
            <label class="form-label" for="description">Playlist description</label>
        </div>
        <br>
        <div class="form-outline">
            <input value="<%=playlist.videoId%>" required type="text" name="videoId" class="form-control" id="videoId"
                rows="4" />
            <label class="form-label" for="videoId">Playlist YT video id </label>
        </div>
        <br>
        <label class="form-label" for="topicsCovered">Topics covered</label>
        <div style="border-radius: .25rem;border: 1px lightgrey solid;padding: .33em .75em;">
            <div class="d-flex mb-1">
                <input name="coveredTopics" placeholder="Topic" id="topic" class="form-control">
                <button type="button" class="btn-sm btn btn-primary"
                    onclick="addTagTo('topics',$('#topic').val())">+</button>
            </div>
            <label style="display: none;" class="form-label" for="topicsCovered"></label>
            <div class="d-flex justify-content-between">
                <h5 id="topics">
                </h5>
            </div>
        </div>
        <br>
        <label class="form-label" for="topicsCovered">Projects</label>
        <div style="border-radius: .25rem;border: 1px lightgrey solid;padding: .33em .75em;">
            <label style="display: none;" class="form-label" for="topicsCovered"></label>
            <div class="d-flex mb-1">
                <input name="projects" placeholder="Project" id="project" class="form-control">
                <button type="button" class="btn-sm btn btn-primary"
                    onclick="addTagTo('projects',$('#project').val())">+</button>
            </div>
            <div class="d-flex justify-content-between">
                <h5 id="projects">
                </h5>
            </div>
        </div>
        <br>
        <div class="form-outline">
            <input value="<%=playlist.numOfVideos%>" required type="number" name="numOfVideos" class="form-control"
                id="numOfVideos" rows="4" />
            <label class="form-label" for="numOfVideos">Number of videos</label>
        </div>
        <br>
        <div class="w-100 flex-wrap d-flex">
            <div class="form-outline col-md-6 col-6">
                <input value="<%=playlist.btnLink%>" required type="url" name="btnLink" class="form-control"
                    id="btnLink" rows="4" />
                <label class="form-label" for="btnLink">Bottom button link</label>
            </div>
            <div class="form-outline col-md-6 col-6">
                <input value="<%=playlist.btnText%>" required type="text" name="btnText" class="form-control"
                    id="btnText" rows="4" />
                <label class="form-label" for="btnText">Bottom button text</label>
            </div>
        </div>
        <br>
        <button type="submit" class="btn btn-primary w-100">Update playlist</button>
    </form>
</div>
<script>
    var topicsArray = [];
    var projectsArray = [];

    "<% for (let j=0; j < playlist.topicsCovered.length; j++) { %>"
    topicsArray.push("<%=playlist.topicsCovered[j]%>");
    "<% } %>"

    "<% for (let j=0; j < playlist.projects.length; j++) { %>"
    projectsArray.push("<%=playlist.projects[j]%>");
    "<% } %>"

    function addTagTo(toArray, tag) {
        $(`#${toArray.slice(0, -1)}`).val("").focus();
        if (toArray === "topics") {
            topicsArray.push(tag)
        } else if (toArray === "projects") {
            projectsArray.push(tag)
        }
        refreshTags();
    }

    function removeTagFrom(fromArray, indx) {
        if (fromArray === "topics") {
            topicsArray.splice(indx, 1);
        } else if (fromArray === "projects") {
            projectsArray.splice(indx, 1);
        }
        refreshTags();
    }

    function refreshTags() {
        $("#topics").empty();
        $("#projects").empty();
        topicsArray.map((itm, indx) => {
            $("#topics").append(`<span class="badge m-1 bg-primary">
                        ${itm} <button type="button" onclick="removeTagFrom('topics',${indx})" class="btn-danger">-</button>
                    </span>`);
        });
        projectsArray.map((itm, indx) => {
            $("#projects").append(`<span class="badge m-1 bg-primary">
                        ${itm} <button type="button" onclick="removeTagFrom('projects',${indx})" class="btn-danger">-</button>
                    </span>`);
        });
    }



    window.onload = () => {
        $("form").submit(function (e) {
            e.preventDefault();
            // get all the inputs into an array.
            var $inputs = $('form :input');
            var values = {};
            $inputs.each(function () {
                values[this.name] = $(this).val();
            });

            axios.post("/admin/edit/playlist/<%=playlist._id%>", { ...values, projects: projectsArray, topicsCovered: topicsArray }).then(response => {
                if (response.data.status) {
                    window.location.href = "/admin/playlists"
                } else {
                    window.location.reload();
                }
            })

        });
        refreshTags();
    }
</script>